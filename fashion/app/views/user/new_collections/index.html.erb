<h1>New Collections</h1>

<table border="1" width="100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @new_collections.each do |new_collection| %>
      <tr>
        <td><%= new_collection.title %></td>
        <td><%= new_collection.description %></td>
        <td><%= link_to 'Show', user_new_collection_path(new_collection) %></td>
        <td><%= link_to 'Edit', edit_user_new_collection_path(new_collection) %></td>
        <td><%= link_to 'Destroy', user_new_collection_path(new_collection), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Collection', new_user_new_collection_path %>
